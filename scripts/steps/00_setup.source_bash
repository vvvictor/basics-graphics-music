        de0_cv               | \
        de0_nano             | \
        de0_nano_alt_vga     | \
        de0_nano_soc         | \
        de1_soc              | \
        de2_115              | \
        de10_lite            | \
        de10_lite_tm1638     | \
        de10_nano            | \
        omdazz               | \
        omdazz10k            | \
        piswords6            | \
        qmtech_c4_starter    | \
        rzrd                 | \
        saylinx              | \
        zeowaa               | \
        zeowaa_7_digit       )

            fpga_toolchain=quartus
            use_old_version_of_quartus=0
        ;;

        gowin_runber         | \
        tang_nano_1k         | \
        tang_nano_20k        | \
        tang_nano_4k         | \
        tang_nano_9k         | \
        tang_primer_20k_dock | \
        tang_primer_20k_dock_alt | \
        tang_primer_20k_lite )

            fpga_toolchain=gowin
        ;;

        arty_a7              | \
        arty_s7              | \
        basys3               | \
        cmod_a7              | \
        cmod_s7              | \
        nexys4               | \
        nexys4_ddr           | \
        nexys_a7             | \
        zybo_z7              )

            fpga_toolchain=xilinx
        ;;

        ice40hx8k_evb_yosys      | \
        orangecrab_ecp5_yosys    | \
        tang_nano_9k_gowin_yosys | \
        tang_primer_20k_dock_gowin_yosys )
