then
    printf "error: script \"%s\" should be sourced from another script, not from the terminal\n"  \
        "$BASH_SOURCE" 1>&2

    exit 1
fi

if [ "$0" == "$BASH_SOURCE" ]
then
    printf "error: script \"%s\" should be sourced from another script, not used alone\n"  \
        "$0" 1>&2

    exit 1
fi

